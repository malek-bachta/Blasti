<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".front.EditProfile"
    android:background="@color/black">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="512dp">

                <TextView
                    android:id="@+id/editTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="Manage Profile"
                    android:textAlignment="textStart"
                    android:textColor="#FDC716"
                    android:textSize="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/buttonbackedit"
                    android:layout_width="33dp"
                    android:layout_height="32dp"
                    android:background="@drawable/arrow_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/txtempty"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="115dp"
                    android:text="About me "
                    android:textAlignment="viewStart"
                    android:textColor="#FDC716"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTitle" />


                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtempty"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="40dp"
                    android:text="Name"
                    android:textAlignment="viewStart"
                    android:textColor="#FDC716"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/NamehasSelcted"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/NamehasSelcted"
                    app:layout_constraintVertical_bias="1.0" />

                <TextView
                    android:id="@+id/NamehasSelcted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/Bio"
                    android:layout_alignBottom="@+id/Bio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:drawableRight="@drawable/ic_edit"
                    android:drawablePadding="5dp"
                    android:text="User Name"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@+id/txt1"
                    tools:layout_editor_absoluteY="231dp" />

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtempty"
                    android:layout_alignParentStart="true"
                    android:text="Email"
                    android:textAlignment="viewStart"
                    android:textColor="#FDC716"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="@+id/EmailhasSelcted"
                    app:layout_constraintStart_toStartOf="@+id/txt1"
                    app:layout_constraintTop_toTopOf="@+id/EmailhasSelcted" />

                <TextView
                    android:id="@+id/EmailhasSelcted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/Bio"
                    android:layout_alignBottom="@+id/Bio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:drawableRight="@drawable/ic_edit"
                    android:drawablePadding="5dp"
                    android:text="User Name"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@+id/txt2"
                    tools:layout_editor_absoluteY="310dp" />

                <TextView
                    android:id="@+id/Bio"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtempty"
                    android:layout_alignParentStart="true"
                    android:text="Bio"
                    android:textAlignment="viewStart"
                    android:textColor="#FDC716"
                    android:textSize="17sp"
                    app:layout_constraintStart_toStartOf="@+id/txt2"
                    app:layout_constraintTop_toTopOf="@+id/BiohasSelcted" />

                <TextView
                    android:id="@+id/BiohasSelcted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/Bio"
                    android:layout_alignBottom="@+id/Bio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:drawableRight="@drawable/ic_edit"
                    android:drawablePadding="5dp"
                    android:text="User Name"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@+id/Bio"
                    tools:layout_editor_absoluteY="389dp" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>